{% block content %}

<div class="container-fluid text-center">
    <h1 class="display-5">Majors</h1>
    <p class="text-muted">View or add majors</p>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Major ID</th>
            <th scope="col">Title</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">WBND</th>
            <td>Waterbending</td>
        </tr>
        <tr>
            <th scope="row">FBND</th>
            <td>Firebending</td>
        </tr>
        <tr>
            <th scope="row">EBND</th>
            <td>Earthbending</td>
        </tr>
        <tr>
            <th scope="row">ABND</th>
            <td>Airbending</td>
        </tr>
    </tbody>
</table>

<hr>

<div class="container-fluid">
    <form class="form-horizontal">
        <fieldset>

            <!-- Form Name -->
            <legend>Add Major</legend>

            <!-- Text input-->
            <div class="form-group py-2">
                <label class="col-md-4 control-label" for="majorid">Major ID</label>
                <div class="col-md-2">
                    <input id="majorid" name="majorid" type="text" placeholder="" class="form-control input-md"
                        required="">
                    <div id="majorhelp" class="form-text">Enter a unique 4 letter abbreviation</div>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group py-2">
                <label class="col-md-4 control-label" for="majortitle">Major Title</label>
                <div class="col-md-4">
                    <input id="majortitle" name="majortitle" type="text" placeholder="" class="form-control input-md"
                        required="">

                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="addmajor"></label>
                <div class="col-md-4">
                    <button id="addmajor" name="addmajor" class="btn btn-primary">Add Major</button>
                </div>
            </div>

        </fieldset>
    </form>
</div>
{% endblock %}