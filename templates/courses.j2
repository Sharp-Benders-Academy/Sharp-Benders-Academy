{% extends 'base.html' %}

{% block title %}Courses{% endblock %}

{% block navlinks %}
<div class="navbar-nav nav-tabs">
    <a class="nav-link mx-3" aria-current="page" href="/">Home</a>
    <a class="nav-link" aria-current="page" href="students">Students</a>
    <a class="nav-link" href="majors">Majors</a>
    <a class="nav-link" href="advisors">Advisors</a>
    <a class="nav-link" href="instructors">Instructors</a>
    <a class="nav-link active" href="courses">Courses</a>
    <a class="nav-link" href="courses_instructors">Courses_Instructors</a>
    <a class="nav-link" href="registrations">Registrations</a>
    <a class="nav-link" href="semesters">Semesters</a>
    <a class="nav-link" href="grades">Grades</a>
</div>
{% endblock %}

{% block content %}

<div class="container-fluid text-center">
    <h1 class="display-5">Courses</h1>
    <p class="text-muted">View or add courses</p>
</div>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            {% for key in courses[0].keys() %}

            <th scope="col"> {{ key }} </th>

            {% endfor %}
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        {% for course in courses %}
        <tr>
            {% for key in course.keys() %}

            <td>{{course[key]}}
                {% endfor %}
            <td><a href="">
                    <img src="{{ url_for('static', filename='images/trash.svg')}}" alt="Delete" width="20" height="20">
                </a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>







<hr>

<div class="container-fluid">
    <form class="form-horizontal">
        <fieldset>

            <!-- Form Name -->
            <legend>Add Course</legend>

            <!-- Text input-->
            <div class="form-group py-2">
                <label class="col-md-4 control-label" for="courseid">Course ID</label>
                <div class="col-md-2">
                    <input id="courseid" name="courseid" type="number" maxlength="4" placeholder=""
                        class="form-control input-md" required="">
                    <div id="coursehelp" class="form-text">Enter a unique 4 digit number</div>

                </div>
            </div>

            <!-- Text input-->
            <div class="form-group py-2">
                <label class="col-md-4 control-label" for="coursetitle">Course Title</label>
                <div class="col-md-4">
                    <input id="coursetitle" name="coursetitle" type="text" placeholder="" class="form-control input-md"
                        required="">

                </div>
            </div>

            <!-- Text input-->
            <div class="form-group py-2">
                <label class="col-md-4 control-label" for="starttime">Start Time</label>
                <div class="col-md-2">
                    <input id="starttime" name="starttime" type="text" placeholder="14:00"
                        class="form-control input-md">

                </div>
            </div>


            <!-- Text input-->
            <div class="form-group py-2">
                <label class="col-md-4 control-label" for="endtime">End Time</label>
                <div class="col-md-2">
                    <input id="endtime" name="endtime" type="text" placeholder="16:00" class="form-control input-md">

                </div>
            </div>

            <!-- Text input-->
            <div class="form-group py-2">
                <label class="col-md-4 control-label" for="numofcredits">Num of credits</label>
                <div class="col-md-1">
                    <input id="numofcredits" name="numofcredits" type="number" placeholder=""
                        class="form-control input-md" required="">

                </div>
            </div>

            <!-- Multiple Checkboxes (inline) -->
            <div class="form-group py-2">
                <label class="col-md-4 control-label" for="isremote">Is remote?</label>
                <div class="col-md-4">
                    <label class="checkbox-inline" for="isremote-0">
                        <input type="checkbox" name="isremote" id="isremote-0" value="1">
                        Yes
                    </label>
                </div>
            </div>



            <!-- Text input-->
            <div class="form-group py-2">
                <label class="col-md-4 control-label" for="capacity">Capacity</label>
                <div class="col-md-2">
                    <input id="capacity" name="capacity" type="number" placeholder="" class="form-control input-md">

                </div>
            </div>

            <!-- Select Multiple -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="instructor">Select Instructor(s)</label>
                <div class="col-md-4">
                    <select id="instructor" name="instructor" class="form-control" multiple="multiple">
                        <option value="1">Katara Williams</option>
                        <option value="2">Sokka Brown</option>
                        <option value="3">Azula Stone</option>
                    </select>
                </div>
                <div id="instructorselecthelp" class="form-text">Hold Ctrl/CMD to select multiple instructors</div>
            </div>

            <!-- Button -->
            <div class="form-group pb-2">
                <label class="col-md-4 control-label" for="submit"></label>
                <div class="col-md-4">
                    <button id="submit" name="submit" class="btn btn-primary">Add Course</button>
                </div>
            </div>

        </fieldset>
    </form>


</div>


<script>
    function onDelete() {
        alert('Are you sure you want to delete?')
    }
</script>
{% endblock %}