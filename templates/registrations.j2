{% block content %}

<div class="container-fluid text-center">
    <h1 class="display-5">Registrations</h1>
    <p class="text-muted">View, add, update, or delete student registrations</p>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Reg ID</th>
            <th scope="col">Student</th>
            <th scope="col">Course</th>
            <th scope="col">Semester</th>
            <th scope="col">Year</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Korra Smith</td>
            <td>Manipulation Water - Waterbending Techniques</td>
            <td>Fall</td>
            <td>2021</td>
            <td><img src="images/pencil.svg" alt="Edit" width="20" height="20"></td>
            <td><img onclick="onDelete()" src="images/trash.svg" alt="Edit" width="20" height="20"></td>
        </tr>
        <tr>
            <th scope="row">2</th>
            <td>Roku Hunter</td>
            <td>Introduction to Bending</td>
            <td>Fall</td>
            <td>2021</td>
            <td><img src="images/pencil.svg" alt="Edit" width="20" height="20"></td>
            <td><img onclick="onDelete()" src="images/trash.svg" alt="Edit" width="20" height="20"></td>
        </tr>
        <tr>
            <th scope="row">3</th>
            <td>Aang Cook</td>
            <td>Introduction to Bending</td>
            <td>Summer</td>
            <td>2021</td>
            <td><img src="images/pencil.svg" alt="Edit" width="20" height="20"></td>
            <td><img onclick="onDelete()" src="images/trash.svg" alt="Edit" width="20" height="20"></td>
        </tr>
        <tr>
            <th scope="row">4</th>
            <td>Korra Smith</td>
            <td>Bending Fundamentals</td>
            <td>Summer</td>
            <td>2022</td>
            <td><img src="images/pencil.svg" alt="Edit" width="20" height="20"></td>
            <td><img onclick="onDelete()" src="images/trash.svg" alt="Edit" width="20" height="20"></td>
        </tr>


    </tbody>
</table>

<hr>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <form class="form-horizontal">
                <fieldset>

                    <!-- Form Name -->
                    <legend>Add Registration</legend>

                    <!-- Select Basic -->
                    <div class="form-group py-2">
                        <label class="col-md-4 control-label" for="studentid">Student Name</label>
                        <div class="col-md-4">
                            <select id="studentid" name="studentid" class="form-control">
                                <option value="1">Korra Smith</option>
                                <option value="2">Aang Cook</option>
                                <option value="3">Roku Hunter</option>
                            </select>
                        </div>
                    </div>

                    <!-- Select Basic -->
                    <div class="form-group py-2">
                        <label class="col-md-4 control-label" for="courseid">Course Name</label>
                        <div class="col-md-4">
                            <select id="courseid" name="courseid" class="form-control">
                                <option value="3101">Introduction to Bending</option>
                                <option value="4205">Bending Fundamentals</option>
                                <option value="5401">Manipulation Water - Water Tech</option>
                            </select>
                        </div>
                    </div>

                    <!-- Select Basic -->
                    <div class="form-group py-2">
                        <label class="col-md-4 control-label" for="semesterid">Semester</label>
                        <div class="col-md-2">
                            <select id="semesterid" name="semesterid" class="form-control">
                                <option value="FALL">Fall</option>
                                <option value="SPNG">Spring</option>
                                <option value="SUMR">Summer</option>
                            </select>
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group pt-2">
                        <label class="col-md-4 control-label" for="year">Year</label>
                        <div class="col-md-2">
                            <input id="year" name="year" type="number" value="2022" class="form-control input-md"
                                required="">

                        </div>
                    </div>

                    <!-- Button -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="submit"></label>
                        <div class="col-md-4">
                            <button id="submit" name="submit" class="btn btn-primary">Add Registration</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
        <div class="col">
            <form class="form-horizontal">
                <fieldset>

                    <!-- Form Name -->
                    <legend>Edit Registration</legend>

                    <!-- Select Basic -->
                    <div class="form-group py-2">
                        <label class="col-md-4 control-label" for="studentid">Student Name</label>
                        <div class="col-md-4">
                            <select id="studentid" name="studentid" class="form-control">
                            </select>
                        </div>
                    </div>

                    <!-- Select Basic -->
                    <div class="form-group py-2">
                        <label class="col-md-4 control-label" for="courseid">Course Name</label>
                        <div class="col-md-4">
                            <select id="courseid" name="courseid" class="form-control">
                            </select>
                        </div>
                    </div>

                    <!-- Select Basic -->
                    <div class="form-group py-2">
                        <label class="col-md-4 control-label" for="semesterid">Semester</label>
                        <div class="col-md-2">
                            <select id="semesterid" name="semesterid" class="form-control">
                            </select>
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group pt-2">
                        <label class="col-md-4 control-label" for="year">Year</label>
                        <div class="col-md-2">
                            <input id="year" name="year" type="text" placeholder="" class="form-control input-md"
                                required="">

                        </div>
                    </div>

                    <!-- Button -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="submit"></label>
                        <div class="col-md-4">
                            <button id="submit" name="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>

                </fieldset>
            </form>


        </div>
    </div>



</div>



<script>
    function onDelete() {
        alert('Are you sure you want to delete?')
    }
</script>

