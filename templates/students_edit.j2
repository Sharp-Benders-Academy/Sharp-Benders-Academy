{% extends 'base.html' %}

{% block title %}Edit Student{% endblock %}

{% block navlinks %}
<div class="navbar-nav nav-tabs">
    <a class="nav-link mx-3" aria-current="page" href="/">Home</a>
    <a class="nav-link" aria-current="page" href="/students">Students</a>
    <a class="nav-link" href="/majors">Majors</a>
    <a class="nav-link" href="/advisors">Advisors</a>
    <a class="nav-link" href="/instructors">Instructors</a>
    <a class="nav-link" href="/courses">Courses</a>
    <a class="nav-link" href="/courses_instructors">Courses_Instructors</a>
    <a class="nav-link active" href="/registrations">Registrations</a>
    <a class="nav-link" href="/semesters">Semesters</a>
    <a class="nav-link" href="/grades">Grades</a>
</div>
{% endblock %}

{% block content %}

<div class="container-fluid text-center">
    <h1 class="display-5">Edit Student</h1>
    <p class="text-muted">Edit the student's information</p>
</div>

<hr>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <form action="/edit_student/{{student_id}}" method="post" class="form-horizontal">
                <fieldset>

                    <!-- Edit_Student -->
                    <legend>Edit Student</legend>

                    
                    <!-- Select Basic -->
                    <div class="form-group py-2">
                        <label class="col-md-4 control-label" for="major_id">Major</label>
                        <div class="col-md-4">
                            <select id="major_id" name="major_id" class="form-control form-select">
                                {% for major in majors %}
                                <option value="{{major.major_id}}" {{'selected' if data[0].Title==major.Title
                                    }}>
                                    {{major.Title}}
                                </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <!-- Button -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="submit"></label>
                        <div class="col-md-4">
                            <button id="submit" name="submit" class="btn btn-primary">Save</button>
                            <a href="/students"><button type="button" class="btn btn-danger">Cancel</button></a>
                        </div>
                    </div>

        </div>
    </div>
</div>

{% endblock %}